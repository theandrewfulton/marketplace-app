<div class="w-64 flex shadow-lg flex-col bg-cover bg-center justify-content bg-white p-6 rounded pt-8 pb-8 m-auto">
  <div class="text-center text-gray-500 mb-6">
    <h2>Sign in
    </h2>
  </div>
  <div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div>
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "bg-transparent border-b m-auto block border-gray-500 w-full mb-6 text-gray-500 pb-1" %>
      </div>
      <div>
        <%= f.label :password, style: "bg-transparent border-b m-auto block border-gray-500 w-full mb-6 text-gray-500 pb-1" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
      <div class="flex mt-4">
        <% if devise_mapping.rememberable? %>
          <div class="field">
          <%= f.check_box :remember_me, html: {class: "mr-2"} %>
          <%= f.label :remember_me %>
          </div>
        <% end %>
      </div>
      <div>
        <input class="shadow-lg pt-3 pb-3 mt-6 w-full text-white bg-indigo-500 hover:bg-white hover:text-indigo-500 rounded-full "
        type="submit" value="Sign In">
      </div>
    <% end %>
  </div>
  <div>
  <br />
    <%= render "devise/shared/links" %>
  </div>
</div>
